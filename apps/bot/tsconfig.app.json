{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es2015",
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["apps/bot/src/app/*"]
    }
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
